// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

generator client {
    provider = "prisma-client-js"
}

model Playlist {
    id        String   @id @unique @default(uuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    name       String
    genre      String
    pictureUrl String @db.Text
    authorName String
    Song       Song[]

    @@unique([name, authorName])
    @@index([authorName])
}

model Song {
    id        String   @id @unique @default(uuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    pictureUrl String @db.Text
    songUrl    String @db.Text
    name       String
    genre      String

    rating      Int?
    artist      String?
    album       String?
    description String?

    authorName   String
    playlistName String
    playlist     Playlist @relation(fields: [playlistName, authorName], references: [name, authorName])

    @@unique([name, playlistName, authorName])
    @@index([playlistName, authorName])
}
